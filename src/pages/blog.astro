---
// Import fetch to make API calls
import fetch from 'node-fetch';

// Function to fetch posts from Ghost
const fetchPosts = async () => {
  const apiUrl = 'http://localhost:2368/ghost/api/v3/content/posts/';
  const key = 'YOUR_GHOSTef0cf643840d55566b1197eda4'; // Replace this with your actual API key
  const response = await fetch(`${apiUrl}?key=${key}`);
  const posts = await response.json();
  return posts.posts;
};

const posts = await fetchPosts();
---

<html>
<head>
  <title>My Blog</title>
</head>
<body>
  <h1>Blog Posts</h1>
  <ul>
    {posts.map(post => (
      <li key={post.id}>
        <a href={post.url}>{post.title}</a>
      </li>
    ))}
  </ul>
</body>
</html>
